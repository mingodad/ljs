function pi(precision : double) : double {
    var a : int = 4
    var b
    var k : int = 1
    precision /= 10 // this is just guessing...
    do {
        b = a + ((k % 2 == 0)? 4 : -4) / (2 * k + 1)
        a , b = b , a
        k += 1
    } while (math.abs(a - b) >= precision)

function fizzbuzz(min, max) {
    var i = min
    do {
        if ((i % 3 == 0) && (i % 5 == 0)) {
            print("- " .. i .. " FizzBuzz")
        }
        else if (i % 3 == 0) {
            print("- " .. i .. " Fizz")    
        }
        else if (i % 5 == 0) {
            print("- " .. i .. " Buzz")    
        }
        else {
            print("- " .. i)
        }
        i +=  1
    } while (i <= max)
}
